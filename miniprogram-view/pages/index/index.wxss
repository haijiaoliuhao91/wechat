.section {
  margin: 20px;
}

.bc_red {
  background-color: red;
  width: 100px;
  height: 120px;
  border-radius: 10px;
  padding: 10px;
}

.bc_green {
  background: green;
  width: 100px;
  height: 140px;
  border-radius: 10px;
  padding: 10px;
}

.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #b2b2b2;
  background-color: #f2f2f2;
  width: auto;
}

/* 圆角按钮 */
.circle-btn_hover_btn {
  opacity: 0.8;
  transform: scale(0.95, 0.95);
}

/* 矩形按钮 */
.rect-btn_hover_btn {
  position: relative;
  top: 3rpx;
  left: 3rpx;
  box-shadow: 0px 0px 8px rgba(175, 175, 175, .2) inset;
}